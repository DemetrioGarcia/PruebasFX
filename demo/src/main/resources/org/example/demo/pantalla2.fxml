<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="519.0" prefWidth="542.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo.Pantalla2Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

   <TableView fx:id="tablaBocatas" prefHeight="200.0" prefWidth="200.0">
     <columns>
       <TableColumn fx:id="nombreTableColumn" prefWidth="75.0" text="Nombre" />
       <TableColumn fx:id="precioTableColumn" prefWidth="75.0" text="Precio" />
     </columns>
   </TableView>

   <ButtonBar prefHeight="40.0" prefWidth="200.0" />
   <TextField fx:id="NombreTextField" promptText="Introduce un nombre" />
   <TextField fx:id="PrecioTextField" promptText="Introduce un precio..." />
 <Button mnemonicParsing="false" onAction="#guardarBocata" prefHeight="42.0" prefWidth="510.0" text="GUARDAR" textAlignment="CENTER">
      <font>
         <Font size="18.0" />
      </font>
      <cursor>
         <Cursor fx:constant="CROSSHAIR" />
      </cursor>
   </Button>

    <Button fx:id="pantallaHello" onAction="#IrAPantalla1" text="Ir a pantalla Hello" />
</VBox>
